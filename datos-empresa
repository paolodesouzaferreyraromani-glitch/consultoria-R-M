<script>
// CONFIGURACI√ìN - CAMBIA ESTE VALOR
const EMAIL_DESTINO = "fromanim@gmail.com"; // CAMBIA POR TU EMAIL

// Configurar formulario
document.getElementById('formEmpresa').action = `https://formsubmit.co/${EMAIL_DESTINO}`;

// Mostrar mensaje
function mostrarMensaje(texto, tipo) {
    const container = document.getElementById('mensajeContainer');
    container.innerHTML = `<div class="mensaje ${tipo}">${texto}</div>`;
    setTimeout(() => {
        container.innerHTML = '';
    }, 5000);
    
    // Scroll hacia el mensaje
    container.scrollIntoView({ behavior: 'smooth', block: 'center' });
}

// Validar RUC (11 d√≠gitos)
function validarRUC(ruc) {
    return /^\d{11}$/.test(ruc);
}

// Validar email
function validarEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
}

// Validar tel√©fono peruano
function validarTelefono(telefono) {
    return telefono.length >= 9;
}

// Enviar formulario de empresa
function enviarFormEmpresa(event) {
    event.preventDefault();
    const form = document.getElementById('formEmpresa');
    
    // Validar campos requeridos
    const razonSocial = document.getElementById('razonSocial').value;
    const ruc = document.getElementById('ruc').value;
    const direccion = document.getElementById('direccion').value;
    const ciudad = document.getElementById('ciudad').value;
    const sector = document.getElementById('sector').value;
    const empleados = document.getElementById('empleados').value;
    const contacto = document.getElementById('contacto').value;
    const emailContacto = document.getElementById('emailContacto').value;
    const telefonoContacto = document.getElementById('telefonoContacto').value;
    const interes = document.getElementById('interes').value;
    const descripcion = document.getElementById('descripcion').value;
    const terminos = document.getElementById('terminos').checked;
    
    if (!razonSocial || !ruc || !direccion || !ciudad || !sector || !empleados || !contacto || !emailContacto || !telefonoContacto || !interes || !descripcion) {
        mostrarMensaje('‚ùå Debe completar todos los campos obligatorios', 'error');
        return false;
    }
    
    if (!validarRUC(ruc)) {
        mostrarMensaje('‚ùå El RUC debe tener 11 d√≠gitos num√©ricos', 'error');
        document.getElementById('ruc').style.borderColor = 'red';
        return false;
    }
    
    if (!validarEmail(emailContacto)) {
        mostrarMensaje('‚ùå Ingrese un correo electr√≥nico v√°lido', 'error');
        document.getElementById('emailContacto').style.borderColor = 'red';
        return false;
    }
    
    if (!validarTelefono(telefonoContacto)) {
        mostrarMensaje('‚ùå Ingrese un n√∫mero de tel√©fono v√°lido (m√≠nimo 9 d√≠gitos)', 'error');
        document.getElementById('telefonoContacto').style.borderColor = 'red';
        return false;
    }
    
    if (!terminos) {
        mostrarMensaje('‚ùå Debe aceptar la Pol√≠tica de Privacidad', 'error');
        return false;
    }
    
    mostrarMensaje('‚è≥ Enviando registro de empresa...', 'info');
    
    // Enviar con FormSubmit
    form.submit();
    mostrarMensaje('‚úÖ ¬°Registro enviado con √©xito! Hemos recibido los datos de su empresa. En breve nos comunicaremos con usted.', 'exito');
    form.reset();
    return false;
}

// Validar RUC en tiempo real
document.getElementById('ruc').addEventListener('input', function() {
    this.value = this.value.replace(/[^0-9]/g, '');
    if (this.value.length > 11) {
        this.value = this.value.slice(0, 11);
    }
});

document.getElementById('ruc').addEventListener('blur', function() {
    if (this.value && !validarRUC(this.value)) {
        this.style.borderColor = 'red';
    } else {
        this.style.borderColor = '';
    }
});

// Validar email en tiempo real
document.getElementById('emailContacto').addEventListener('blur', function() {
    if (this.value && !validarEmail(this.value)) {
        this.style.borderColor = 'red';
    } else {
        this.style.borderColor = '';
    }
});

// Validar tel√©fono en tiempo real
document.getElementById('telefonoContacto').addEventListener('input', function() {
    this.value = this.value.replace(/[^0-9+]/g, '');
});

document.getElementById('telefonoContacto').addEventListener('blur', function() {
    if (this.value && !validarTelefono(this.value)) {
        this.style.borderColor = 'red';
    } else {
        this.style.borderColor = '';
    }
});

// Limpiar errores al escribir
document.querySelectorAll('.form-control').forEach(elemento => {
    elemento.addEventListener('input', function() {
        this.style.borderColor = '';
    });
});

// Autocompletar campos de ejemplo (opcional)
function cargarEjemplo() {
    document.getElementById('razonSocial').value = 'Ejemplo Corporaci√≥n SAC';
    document.getElementById('ruc').value = '20123456789';
    document.getElementById('direccion').value = 'Av. Ejemplo 123, San Isidro';
    document.getElementById('ciudad').value = 'Lima';
    document.getElementById('sector').value = 'Servicios';
    document.getElementById('empleados').value = '51-200';
    document.getElementById('contacto').value = 'Juan P√©rez';
    document.getElementById('emailContacto').value = 'contacto@ejemplo.com';
    document.getElementById('telefonoContacto').value = '987654321';
    document.getElementById('interes').value = 'Diagn√≥stico';
    document.getElementById('descripcion').value = 'Buscamos mejorar nuestros procesos internos y obtener certificaci√≥n ISO 9001. Actualmente tenemos 120 empleados y operamos en 3 ciudades.';
    document.getElementById('terminos').checked = true;
    
    mostrarMensaje('üìã Datos de ejemplo cargados para prueba', 'info');
}
</script>

